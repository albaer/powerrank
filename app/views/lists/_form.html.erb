<%= form_for @list do |list_builder| %>
    
    <%= list_builder.label :title %>
    <%= list_builder.text_field :title %>

    <br />
    <br />

    <%= list_builder.fields_for :items do |item_builder| %>
      <%= render 'item_fields', f: item_builder %>
    <% end %>

    <%= link_to_add_fields "Add Item", list_builder, :items %>
    <br />
    <%= list_builder.submit %>
<% end %>
